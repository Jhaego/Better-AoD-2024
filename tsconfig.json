{
  "compilerOptions": {
    "jsx": "react",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "module": "ESNext",
    "lib": [
      "es2021",
      "DOM"
    ],
    "typeRoots": [
      "node_modules/@types"
    ],
    "target": "ES2022",
    "noImplicitAny": false,
    "noImplicitThis": true,
    "strictNullChecks": true,
    "moduleResolution": "bundler",
    "outDir": "public",
    "baseUrl": ".",
    "allowJs": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "noEmit": false,
  },
  "include": [
    "src/**/*"
  ],
}